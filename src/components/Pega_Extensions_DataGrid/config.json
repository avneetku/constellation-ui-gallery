{
  "name": "Pega_Extensions_DataGrid",
  "label": "Data Grid",
  "description": "Data Grid",
  "organization": "Pega",
  "version": "1.0.0",
  "library": "Extensions",
  "allowedApplications": [],
  "componentKey": "Pega_Extensions_DataGrid",
  "type": "Widget",
  "subtype": "PAGE",
  "icon": "OneColumnPage.svg",
  "properties": [
    {
      "label": "General",
      "format": "GROUP",
      "properties": [
        {
          "name": "label",
          "label": "Label",
          "format": "TEXT",
          "required": true,
          "defaultValue": "Data Grid"
        },
        {
          "name": "uniqueKey",
          "label": "Unique Key",
          "format": "TEXT",
          "required": true,
          "defaultValue": ""
        }
      ]
    },
    {
      "label": "Data View settings",
      "format": "GROUP",
      "properties": [
        {
          "name": "tableColumns",
          "format": "TEXT",
          "label": "Table Columns(All are shown if given empty)",
          "defaultValue": "",
          "placeholder": "Eg. TaskName, TaskId"
        },
        {
          "name": "dataViewName",
          "label": "Data Page Id",
          "format": "TEXT",
          "required": true,
          "defaultValue": ""
        },
        {
          "name": "loadingMessage",
          "label": "Loading message",
          "format": "TEXT",
          "defaultValue": "Loading Data"
        },
        {
          "name": "sorting",
          "label": "Sorting",
          "format": "BOOLEAN",
          "defaultValue": false
        },
        {
          "name": "columnSearch",
          "label": "Column Search",
          "format": "BOOLEAN",
          "defaultValue": false
        },
        {
          "name": "stripedRows",
          "label": "Striped rows",
          "format": "BOOLEAN",
          "defaultValue": true
        },
        {
          "name": "pagination",
          "label": "Pagination (Should be configured in Pega Data Page)",
          "format": "BOOLEAN",
          "defaultValue": true
        },
        {
          "name": "pageSize",
          "label": "Per Page",
          "format": "NUMBER",
          "defaultValue": 10,
          "visibility": "$this.pagination == true"
        }
      ]
    },
    {
        "label": "Data Update settings",
        "format": "GROUP",
        "properties": [
          {
            "name": "savablePage",
            "format": "TEXT",
            "label": "Savable Data Page",
            "defaultValue": "",
            "required": true,
            "placeholder": "Eg. D_TaskSavable"
          },
          {
            "name": "fieldsToUpdate",
            "format": "TEXT",
            "label": "Fields to update (All are updated if given empty)",
            "defaultValue": "",
            "placeholder": "Eg. TaskName, TaskId"
          }
        ]
      }
  ],
  "defaultConfig": {}
}
